{
  "version": "2.0.0",
  "windows": {
    "options": {
      "shell": {
        "executable": "cmd.exe",    // Use the Windows command shell
        "args": [
          "/C",
          // The path to VsDevCmd.bat depends on the version of Visual Studio you have installed.
          "\"I:/Visual Studio Compiler/Common7/Tools/VsDevCmd.bat\"",
          "&&"
        ]
      }
    }
  },
  "tasks": [
    {
      "type": "shell",                                      // Use a shell task
      "label": "cl.exe build project",                      // Task label
      "command": "cl.exe",                                  // Command to run
      "args": [
        "/Zi",                                              // Enable debugging information
        "/EHsc",                                            // Enable C++ exception handling
        "/I", "${workspaceFolder}/include",                 // Include directory for header files
        "/Fe:", "${workspaceFolder}/bin/my_project.exe",    // Output executable path
        "${workspaceFolder}/src/*.cpp"                      // Source files to compile
      ],
      "problemMatcher": ["$msCompile"],                     // Use the MSVC problem matcher
      "group": {
        "kind": "build",                                    // This is a build task
        "isDefault": true                                   // Set as the default build task
      }
    }
  ]
}
